<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        >


        <TextView
            android:id="@+id/stressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How stressed are you?" />

        <RatingBar
            android:id="@+id/stressRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:stepSize=".5"/>

        <TextView
            android:id="@+id/numberStress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How big is this project?" />

        <RatingBar
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:stepSize=".5"/>

        <TextView
            android:id="@+id/numberWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/nameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is this project called?"/>

        <EditText
            android:id="@+id/projectName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"/>

        <TextView
            android:id="@+id/selectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected due date: "/>

        <TextView
            android:id="@+id/dateDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Task" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>